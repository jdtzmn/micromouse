{
  "name": "micromouse",
  "version": "1.0.0",
  "description": "a micromouse simulator for writing an algorithm on",
  "scripts": {
    "start": "webpack --config config/webpack.dev.js",
    "test": "jest",
    "build": "webpack --config config/webpack.prod.js",
    "lint": "tslint -p . -c tslint.json"
  },
  "husky": {
    "hooks": {
